

@{
    Repositories.AllBanner _all = new Repositories.AllBanner();
    var _banners = _all.GetAllBanners().Where(c => c.IsActive == true).Take(10);
 }


@model ViewModel.StaticContentViewModel
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


   <!-- BANNER -->
    <section class="bannercontainer bannercontainerV1">
      <div class="fullscreenbanner-container">
        <div class="fullscreenbanner">
          <ul>
          	 @{
                                    foreach (var data in _banners)
                                    {

                                       <li data-transition="pop" data-slotamount="5" data-masterspeed="700" data-title="Slide 1">
              <img  title="@data.BannerTitle"  src="@Url.Content(Codes.ConfigurationWrapper.GalleryPhoto + data.BannerPic)"  alt="slidebg1" data-bgfit="cover" data-bgposition="center center" data-bgrepeat="no-repeat">
              <div class="slider-caption container">
                <div class="tp-caption rs-caption-1 sft start"
                  data-hoffset="0"
                  data-y="200"
                  data-speed="800"
                  data-start="1000"
                  data-easing="Back.easeInOut"
                  data-endspeed="300">
                  @data.BannerTitle
                </div>

                <div class="tp-caption rs-caption-2 sft"
                  data-hoffset="0"
                  data-y="265"
                  data-speed="1000"
                  data-start="1500"
                  data-easing="Power4.easeOut"
                  data-endspeed="300"
                  data-endeasing="Power1.easeIn"
                  data-captionhidden="off">
							@data.BannerText
                  Kidz is a perfect theme for kindergarten school, very simple <br>
                  and easy to use.
                </div>
              </div>
            </li>



                                    }

                                    }
          
       
          </ul>
        </div>
      </div>
    </section>
   
    <!-- MAIN CONTENT -->
    <section class="clearfix linkSection hidden-xs">
      <div class="sectionLinkArea hidden-xs scrolling">
        <div class="container">
          <div class="row">
            <div class="col-sm-3">
              <a href="@Url.Action("Index","Vehicle")" class="sectionLink bg-color-1" id="coursesLink">
                <i class="fa fa-file-text-o linkIcon border-color-1" aria-hidden="true"></i>
                <span class="linkText">Book Now</span>
                <i class="fa fa-chevron-down locateArrow" aria-hidden="true"></i>
              </a>
            </div>
            <div class="col-sm-3">
              <a href="@Url.Action("Contact","Home")" class="sectionLink bg-color-2" id="teamLink">
                <i class="fa fa-calendar-o linkIcon border-color-2" aria-hidden="true"></i>
                <span class="linkText">Contact us</span>
                <i class="fa fa-chevron-down locateArrow" aria-hidden="true"></i>
              </a>
            </div>
            <div class="col-sm-3">
              <a href="@Url.Action("About","Home")" class="sectionLink bg-color-3" id="galleryLink">
                <i class="fa fa-picture-o linkIcon border-color-3" aria-hidden="true"></i>
                <span class="linkText">About us</span>
                <i class="fa fa-chevron-down locateArrow" aria-hidden="true"></i>
              </a>
            </div>
            <div class="col-sm-3">
              <a href="@Url.Action("Blog","Home")"  class="sectionLink bg-color-4" id="newsLink">
                <i class="fa fa-files-o linkIcon border-color-4" aria-hidden="true"></i>
                <span class="linkText">Blog</span>
                <i class="fa fa-chevron-down locateArrow" aria-hidden="true"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>


									
	 <section class="mainContent full-width clearfix courseSingleSection">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 block">
            <div class="thumbnail thumbnailContent alt">
              <h3 class="color-1">Content will go here.</h3>
         
									<div class="text-box">
     @Html.Raw(Model != null ? Model.Description : "")
</div>

            </div>
          </div>
        </div>
      </div>
    </section>
              
           





