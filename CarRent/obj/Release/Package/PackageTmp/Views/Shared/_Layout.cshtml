    function GetVehicles(Type) {
        $.post('@Url.Action("GetVehicles", "Booking")', { Type: Type }, function (data) {
	            var r = '<OPTION VALUE="">Select</OPTION>';
	            for (var i = 0; i < data.length; i++) {
	                r += '<OPTION VALUE="' + data[i].Value + '">' + data[i].Text + '</OPTION>';
	            }
	            $("#CarId").html(r);
	        }, "json");
	    }
