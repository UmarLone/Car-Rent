@model ViewModel.ForgotPassword
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutLogin.cshtml";

}

<!-- BEGIN LOGIN -->

<!-- BEGIN LOGIN FORM -->
@using (Html.BeginForm("ForgotPassword", "Admin", FormMethod.Post, new { @class = "login-form" }))
{        
   
    <h3 class="form-title">Retrieve your password</h3>
    if (ViewBag.Sucess == null)
    {
         <div id="divalrt" class="alert alert-error">
        <button class="close" data-dismiss="alert"></button>
        <span>@Html.ValidationSummary(false)</span>
        </div>
    }
    else{
         <div id="divalrt" class="alert alert-success">
        <button class="close" data-dismiss="alert"></button>
        <span>@ViewBag.Sucess</span>
        </div>
    }
    <div class="form-group">
        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
        <label class="control-label visible-ie8 visible-ie9">Email Id</label>
        <div class="input-icon">
            <i class="icon-user"></i>

            @Html.TextBoxFor(model => model.EmailId, new { @placeholder = "Email Id", @class = "form-control placeholder-no-fix" })
        </div>
    </div>   
           
   <div class="form-actions">
        <label class="checkbox">
           <a href="@Url.Action("Index","Admin")">Back To Login</a>
        </label>
         <button type="submit" class="btn green pull-right">
            Retrieve <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
             
}

<!-- END LOGIN -->

